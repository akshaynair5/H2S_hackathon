{
  "manifest_version": 3,
  "name": "TrustMeter - Page Text Trust Estimator",
  "version": "1.0",
  "description": "Extracts visible text from the current view and asks an LLM how trustworthy it is, showing a trust score in the corner.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "declarativeContent"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrustMeter"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://google.com/*",
        "*://www.google.com/*",
        "*://*.google.com/*",
        "*://*.google.co.in/*",
        "*://*.google.co.uk/*",
        "*://*.bing.com/*",
        "*://*.duckduckgo.com/*",
        "*://*.search.brave.com/*",
        "*://*.yahoo.com/*"
      ],
      "js": ["content.js", "libs/Readability.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
